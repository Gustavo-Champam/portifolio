---
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Contato | Regiane Gimenez',
};
---

<Layout metadata={metadata}>
  <section class="bg-white dark:bg-slate-900 py-20 px-6">
    <div class="max-w-4xl mx-auto">
      <h1 class="text-4xl font-serif font-bold text-center text-gray-900 dark:text-white mb-4">Entre em Contato</h1>
      <p class="text-center text-gray-600 dark:text-gray-300 mb-10">
        Ficarei feliz em atender você! Preencha o formulário abaixo para orçamentos, dúvidas ou propostas.
      </p>

      <form action="https://formsubmit.co/seu-email@gmail.com" method="POST" class="space-y-6">
        <input type="hidden" name="_captcha" value="false">

        <div class="grid md:grid-cols-2 gap-6">
          <div>
            <label class="block mb-1 font-medium text-gray-700 dark:text-gray-300">Nome</label>
            <input name="nome" type="text" required class="w-full px-4 py-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-primary dark:bg-slate-800 dark:border-slate-600 dark:text-white" />
          </div>
          <div>
            <label class="block mb-1 font-medium text-gray-700 dark:text-gray-300">Email</label>
            <input name="email" type="email" required class="w-full px-4 py-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-primary dark:bg-slate-800 dark:border-slate-600 dark:text-white" />
          </div>
        </div>

        <div>
          <label class="block mb-1 font-medium text-gray-700 dark:text-gray-300">Telefone</label>
          <input name="telefone" type="tel" class="w-full px-4 py-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-primary dark:bg-slate-800 dark:border-slate-600 dark:text-white" />
        </div>

        <div>
          <label class="block mb-1 font-medium text-gray-700 dark:text-gray-300">Mensagem</label>
          <textarea name="mensagem" rows="5" required class="w-full px-4 py-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-primary dark:bg-slate-800 dark:border-slate-600 dark:text-white"></textarea>
        </div>

        <div class="text-center">
          <button type="submit" class="btn-primary inline-block bg-primary text-white py-3 px-6 rounded-full hover:bg-secondary transition">
            Enviar Mensagem
          </button>
        </div>
      </form>
    </div>
  </section>
</Layout>
